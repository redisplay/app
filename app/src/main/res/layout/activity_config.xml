        <!-- Display Options Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Options"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Debug Mode Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#333333"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debug Mode"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show debug information bar"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <android.widget.CheckBox
                android:id="@+id/configDebugMode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <!-- App Behavior Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Behavior"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Home Screen Mode Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#333333"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Screen Mode"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register app as home screen launcher"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <android.widget.CheckBox
                android:id="@+id/configHomeScreenMode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <!-- Auto Update Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#333333"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Update"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatically check for and install updates"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <android.widget.CheckBox
                android:id="@+id/configAutoUpdate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <!-- Server Configuration Info Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Configuration (Read-Only)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:id="@+id/configInfoScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:background="#333333"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/configInfoMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading server configuration..."
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center" />

                <!-- Channel Header -->
                <TextView
                    android:id="@+id/configChannelHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Views List -->
                <TextView
                    android:id="@+id/configViewsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Views"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TableLayout
                    android:id="@+id/configViewsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:visibility="gone" />

                <!-- Tap Mappings Table -->
                <TextView
                    android:id="@+id/configTapMappingsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap Mappings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TableLayout
                    android:id="@+id/configTapMappingsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:visibility="gone" />

                <!-- View Schedules Table -->
                <TextView
                    android:id="@+id/configSchedulesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Schedules"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TableLayout
                    android:id="@+id/configSchedulesTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/configCancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="#666666"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/configSaveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Changes"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- View Types Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available View Types"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/configViewTypesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“š View Available View Types"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="16dp" />

        <!-- Clear Config Button -->
        <Button
            android:id="@+id/configClearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Settings"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

</LinearLayout>

</ScrollView>

