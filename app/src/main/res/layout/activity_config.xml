<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiosk Configuration"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Server URL Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server URL"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <!-- Connection Type Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Type"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/configConnectionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/configConnectionTypeRemote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remote HTTP Server"
                android:textColor="#FFFFFF"
                android:checked="true"
                android:padding="12dp"
                android:background="#333333"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/configConnectionTypeInternal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internal Server (Built-in)"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:background="#333333" />
        </RadioGroup>

        <!-- Remote Server URL Input (shown when Remote is selected) -->
        <EditText
            android:id="@+id/configServerUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://192.168.1.100:3000"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:inputType="textUri"
            android:background="#333333"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />
        
        <!-- Channel Name Input (shown when Remote is selected) -->
        <LinearLayout
            android:id="@+id/configChannelNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:textColor="#AAAAAA"
                android:layout_marginBottom="8dp" />
            
            <EditText
                android:id="@+id/configChannelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="public"
                android:text="public"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:inputType="text"
                android:background="#333333"
                android:padding="12dp" />
        </LinearLayout>
        
        <!-- Internal Server Address Display (shown when Internal is selected) -->
        <LinearLayout
            android:id="@+id/configInternalServerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2a2a2a"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:gravity="center">
            
            <TextView
                android:id="@+id/configInternalServerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />
            
            <ImageView
                android:id="@+id/configInternalServerQRCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

